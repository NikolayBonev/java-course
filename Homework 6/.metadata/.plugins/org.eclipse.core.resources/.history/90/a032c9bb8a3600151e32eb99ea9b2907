package catProject;

public class Cat {
	
	private String name;
	private int age;
	
	public Cat(){
		this.name="";
		this.age=0;
	}
	
	public Cat(String name, int age){
		setName(name);
		setAge(age);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		if(age>=0){
			this.age = age;
		}
	}

	public void Say(){
		System.out.print("The cats name is: " + this.name);
		System.out.println(". The cats age is: " + this.age);
	}
}
