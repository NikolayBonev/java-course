	public static int sizeMatrix(Scanner inputs){
		int size = 0;
		while(inputs.hasNext()){
			
			size = inputs.nextInt();
			
			if(size >= 2 && size <= 9){
				return size;
			}
			
			System.out.println("The size has to be between 2 and 9!");
			System.out.print("Please enter size of matrix: ");
		}
		
		return 0 ;
	}

