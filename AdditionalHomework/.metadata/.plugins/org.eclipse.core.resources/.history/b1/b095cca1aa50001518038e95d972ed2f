import java.util.Scanner;

public class Variation {

private static int indexReadyArray = 0;
	
	public static void main(String[] args) {
		Scanner inputs = new Scanner(System.in, "UTF-8");
		
		int[] array = {3, 12, 8};
//		int[] array = null;
//		array = fillArray(array);
		
		boolean[] arrayElementUsed = new boolean[array.length];
		
		System.out.print("Enter count of numbers for variation: ");
		int count = inputs.nextInt();
		
		int[] readyArray = new int[count];
		boolean[] fillArray = new boolean[count];
		
		variation(arrayElementUsed, fillArray, readyArray, array);
		
		inputs.close();
	}
	
	private static void variation(boolean[] arrayElementUsed, boolean[] fillArray, int[] readyArray, int[] array){
		
		for(int i = 0 ; i < array.length ; i++){
			
			if(!isEmpty(arrayElementUsed[i])){
				
				arrayElementUsed[i] = true;
				fillArray[indexReadyArray] = true;
				readyArray[indexReadyArray] = array[i];
				
				if(isReady(fillArray)){
					printArray(readyArray);
					fillArray[indexReadyArray] = false;
					arrayElementUsed[i] = false;
					return;
				}
				
				indexReadyArray++;
				
				variation(arrayElementUsed, fillArray,readyArray, array);
				
				indexReadyArray--;
				fillArray[indexReadyArray] = false;
				
				arrayElementUsed[i] = false;

				
			}
		}
	}
	
	private static int[] fillArray(int[] array){
		Scanner inputs = new Scanner(System.in, "UTF-8");
		
		System.out.print("Enter count of numbers for the variation: ");
		int count = inputs.nextInt();
		
		array = new int[count];
		int i = 0;
		
		do{
			System.out.print("Enter a number: ");
			
			if(inputs.hasNextInt()){
				array[i] = inputs.nextInt();
				i++;
			}else{
				System.out.println("Enter a number please!");
			}
			
		}while(i != count);
		
		inputs.close();
		return array;
		
	}
	
	private static void printArray(int[] readyArray){
		
		System.out.print("{");
		
		for(int i = 0 ; i < readyArray.length ; i++){
			System.out.printf("%2d",readyArray[i]);
			
			if(i != readyArray.length-1){
				System.out.print(", ");
			}
		}
		
		System.out.print("}");
		System.out.println();
	}
	
	private static boolean isReady(boolean[] fillArray){
		
		int count = 0;
		
		for(int i = 0 ; i < fillArray.length; i++){
			
			if(isEmpty(fillArray[i])){
				count++;
			}
		}
		
		if(count == fillArray.length){
			return true;
		}
		
		return false;
	}
	
	private static boolean isEmpty(boolean arrayElementUsed){
		
		if(arrayElementUsed == false){
			return false;
		}else{
			return true;
		}
	}

}
