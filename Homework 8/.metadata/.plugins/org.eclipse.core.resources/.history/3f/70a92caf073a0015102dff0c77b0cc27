package UserLogIn;

import java.math.BigDecimal;

public class LogIn {
	public static void main(String[] args) {
		try{
//			Error will occur -> invalid password  
//			VerifyInfo usrF = new VerifyInfo("pedkddm", "kfkf@kd.bg");
			
			
//			Error will occur -> invalid e-mail
//			VerifyInfo usrS = new VerifyInfo("pedkd1dm", "kfkfkd.bg");
			
//			Error won't occur
			VerifyInfo usrT = new VerifyInfo("ped1kddm", "kfkf@kd.bg");
			
		}catch(IllegalArgumentException exception){
			System.out.println("Incorrect login info!\n" + exception.getMessage());
			System.out.println("Enter correct info!");
		}
		
		BigDecimal balance = BigDecimal.valueOf(5.423);
		
		System.out.println(balance);
	}
}
